{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/backend",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "CommonJS",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node"
  },
  "include": [
    "src/backend/**/*",
    "src/domain/**/*",
    "src/application/**/*",
    "src/infrastructure/**/*",
    "src/presentation/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/frontend/**/*",
    "node_modules",
    "dist"
  ]
}